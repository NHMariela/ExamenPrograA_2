
@model IEnumerable<ExamenPrograA_2.Models.ViewModels.Preguntas>

@{
    ViewBag.Title = "Lista de Preguntas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestión de Preguntas</h2>
<br />
<br />
@if (TempData["ValorMensaje"] != null)
{
    int valor = (int)TempData["ValorMensaje"];
    string mensaje = (string)TempData["MensajeProceso"];

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Mensaje</h2>
                </div>
                <div class="modal-body">
                    @if (valor == 1)
                    {
                        <div class="alert alert-success">@mensaje</div>
                    }
                    else
                    {
                        <div class="alert alert-danger">@mensaje</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID de Pregunta</th>
            <th>Usuario</th>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pregunta in Model)
        {
            <tr>
                <td>@pregunta.PreguntaID</td>
                <td>@pregunta.UsuarioID</td>
                <td>@pregunta.Titulo</td>
                <td>@pregunta.Descripcion</td>
                <td>@pregunta.Fecha.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myModal').modal('show');
        });
    </script>